
@{
}
<br />
<h1>Proceso de Venta</h1>
<br />

<h3>Datos del cliente</h3>
<form asp-action="IniciarVenta" method="post">
    <div class="form-group row mb-4">

        <div class="col-sm-6">
            @Html.Label("Nombre")
            @Html.TextBox("nombre", "", new { @class = "form-control" })
            <br />
        </div>
        <div class="col-sm-6">
            @Html.Label("Apellido")
            @Html.TextBox("apellido", "", new { @class = "form-control" })
            <br />
        </div>
        <div class="col-sm-12">
            @Html.Label("Email")
            @Html.TextBox("email", "", new { @class = "form-control" })
            <br />
        </div>
        <div class="col-sm-12">
            @Html.Label("Dirección")
            @Html.TextBox("direccion", "", new { @class = "form-control" })
            <br />
        </div>
        <div class="col-sm-12">
         
            <br />
            <input type="submit" class="btn btn-success rounded-3 w-100" value="Iniciar Venta" />
        </div>

    </div>
</form>

