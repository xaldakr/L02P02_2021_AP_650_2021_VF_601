        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="mx-auto align-items-center justify-content-center container p-5 text-white ">
            <h5 class="text-center">2021-AP-650 - Xavier Alexander Ávila Posada</h5>
            <h5 class="text-center">2021-VF-601 - Bryan Alberto Vásquez Farfán</h5>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
